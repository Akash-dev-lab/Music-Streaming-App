{activeTrack && (() => {
                                        const audioImg =
                                            activeTrack.image?.[2]?.url ||
                                            activeTrack.image?.[1]?.url ||
                                            activeTrack.image?.[0]?.url ||
                                            '';

                                        return (
                                            <div className="absolute left-1/2 top-80 transform -translate-x-1/2 bg-black/80 rounded-xl p-4 mt-2 z-50 w-[30rem]">
                                                <img src={activeTrack.image[2].url} alt={track.name} className="w-full rounded" />
                                                {audioImg ? (
                                                    <audio key={audioSrc} controls autoPlay className="w-full mt-2">
                                                        <source src={audioSrc} type="audio/mpeg" />
                                                        Your browser does not support the audio tag.
                                                    </audio>
                                                ) : (
                                                    <p className="text-red-400">Audio not available for this track.</p>
                                                )}
                                            </div>
                                        );
                                    })()}
